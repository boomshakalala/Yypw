<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipeLayout">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">
        <TextView
            android:layout_width="72dp"
            android:layout_height="90dp"
            android:text="删除"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/red"
            android:id="@+id/tv_del"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/coupon"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                android:text="租车优惠券"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_deadline"
                android:text="有效期至 2018-10-01"
                android:textSize="10sp"
                android:layout_alignStart="@id/tv_title"
                android:layout_below="@id/tv_title"
                android:textColor="@color/grey_text"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/used_coupan"
                android:id="@+id/iv_used"
                android:layout_toEndOf="@id/tv_deadline"
                android:layout_marginStart="50dp"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_describe"
                android:text="仅限租车使用"
                android:textSize="10sp"
                android:layout_alignStart="@id/tv_title"
                android:layout_below="@id/tv_deadline"
                android:textColor="@color/grey_text"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_money"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:text="10.0"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/tv_money"
                android:text="￥"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:paddingTop="12dp"
                android:layout_marginEnd="5dp" />
        </RelativeLayout>
    </FrameLayout>
</com.daimajia.swipe.SwipeLayout>