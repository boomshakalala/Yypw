<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/iv_head"
        style="@style/DefaultHeadStyle"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="伙伴出行用户"
        android:textColor="@color/black_text"
        android:textSize="16sp"/>
    <TextView
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_my_trip"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="我的行程"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:drawableStart="@mipmap/ic_my_trip"
        android:drawablePadding="12dp"/>
    <TextView
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_my_coupon"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="我的优惠券"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        android:drawableStart="@mipmap/ic_my_coupon"
        android:drawablePadding="12dp"/>
    <TextView
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_my_score"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="我的积分"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        android:drawableStart="@mipmap/ic_my_score"
        android:drawablePadding="12dp"/>
    <TextView
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_rule"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="计费规则"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        android:drawableStart="@mipmap/ic_rule"
        android:drawablePadding="14dp"/>
    <TextView
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_invite"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="邀请好友"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        android:drawableStart="@mipmap/ic_invite"
        android:drawablePadding="12dp"/>
    <TextView
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_more"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="更多"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        android:drawableStart="@mipmap/ic_more"
        android:drawablePadding="12dp"/>
</LinearLayout>