<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_rent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tv_place_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_dot_start"
                android:paddingTop="10dp"
                android:text="租车地"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_rent_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_place_title"
                android:hint="请选择租车地址"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/textColor66"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_place_title"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/dividing_line_color" />

            <LinearLayout
                android:id="@+id/ll_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rent_point"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_start_date"
                    style="@style/style_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06-05" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周二 10:30"
                    android:textColor="@color/grey_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_rent_point"
                android:gravity="end"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_end_date"
                    style="@style/style_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06-05" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周二 10:30"
                    android:textColor="@color/grey_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_rent_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rent_point"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/ll_start_time"
                android:layout_toStartOf="@id/ll_end_time"
                android:drawableBottom="@mipmap/ic_goto"
                android:gravity="center"
                android:text="2天"
                android:textColor="@color/grey_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_start_time"
                android:layout_marginStart="14dp"
                android:text="车型"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_start_time"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_place_title"
                android:drawableEnd="@mipmap/icon_more"
                android:paddingBottom="10dp"
                android:text="全部车型"
                android:textColor="@color/textColor66"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_type_title"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/dividing_line_color" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_type"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="查询"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_rent"
        android:text="近期租车"
        android:textStyle="bold"
        android:textColor="@color/black_text"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:drawableStart="@drawable/ic_title_blue_rectangle"
        android:drawablePadding="5dp"/>

</RelativeLayout>