<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_search_title" />
        <RelativeLayout
            android:layout_below="@id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/rl_time">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取"
                android:textSize="12sp"
                android:textColor="#0271F0"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:background="@drawable/bg_rent_tag"
                android:id="@+id/tv_rent_tag"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还"
                android:textSize="12sp"
                android:textColor="#FFA200"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:background="@drawable/bg_return_tag"
                android:layout_below="@id/tv_rent_tag"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_return_tag"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06-07 10:30"
                android:layout_toEndOf="@id/tv_rent_tag"
                android:layout_marginStart="8dp"
                android:layout_alignBottom="@id/tv_rent_tag"
                android:id="@+id/tv_rent_time"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06-07 10:30"
                android:layout_toEndOf="@id/tv_rent_tag"
                android:layout_marginStart="8dp"
                android:layout_alignBottom="@id/tv_return_tag"
                android:id="@+id/tv_return_time"
                android:textSize="12sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_rent_time"
                android:layout_marginStart="12dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_type"
            android:layout_toEndOf="@id/rl_time"
            android:layout_alignTop="@id/rl_time">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车型"
                android:id="@+id/tv_type_title"
                android:layout_marginTop="2dp"
                android:layout_marginStart="30dp"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_type_title"
                android:layout_alignStart="@id/tv_type_title"
                android:layout_marginTop="9dp"
                android:textSize="12sp"
                android:text="全部车型"
                android:id="@+id/tv_type"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_type_title"
                android:layout_marginStart="55dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_point"
            android:layout_toEndOf="@id/rl_type"
            android:layout_alignTop="@id/rl_time">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="租车"
                android:id="@+id/tv_rent_title"
                android:layout_marginTop="2dp"
                android:layout_marginStart="30dp"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/iv_more"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rent_title"
                android:layout_alignStart="@id/tv_rent_title"
                android:layout_marginTop="9dp"
                android:textSize="12sp"
                android:text="全部车型"
                android:layout_marginEnd="12dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toStartOf="@id/iv_more"
                android:id="@+id/tv_rent_point"/>
        </RelativeLayout>
        <cn.sinata.xldutils.view.SwipeRefreshRecyclerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_car"
            android:layout_below="@id/rl_time"
            android:background="@color/page_bg"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/no_car_data"
            android:layout_below="@id/rl_time"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_empty"
            android:text="暂无数据"
            android:gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:visibility="gone"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>