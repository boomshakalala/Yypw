<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功"
            android:drawableStart="@mipmap/pay_ok"
            android:gravity="center"
            android:id="@+id/tv_msg"
            android:drawablePadding="10dp"
            android:textColor="@color/black_text"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待商家确认订单"
            android:textColor="@color/grey_text"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_see_detail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="查看订单详情"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@color/colorPrimary"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:gravity="center"/>
        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_go_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="返回租车首页"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:background="@drawable/bg_blue_hollow"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tip_1"
        android:textSize="10sp"
        android:textColor="@color/grey_text"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tip_2"
        android:textSize="10sp"
        android:textColor="@color/grey_text"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hot_line"
        android:textSize="10sp"
        android:textColor="@color/grey_text"
        android:layout_marginTop="5dp"/>
</LinearLayout>