<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:id="@+id/ll_bottom"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_negative"
            android:text="取消订单"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_blue_hollow"
            android:textSize="14sp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_positive"
            android:text="联系商家"
            android:layout_marginEnd="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textSize="14sp"
            android:visibility="gone"/>
    </LinearLayout>
    <ScrollView
        android:layout_above="@id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单状态"
                    android:drawableStart="@mipmap/ic_state_black"
                    android:id="@+id/tv_state_title"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="--"
                    android:textColor="@color/color_money_text"
                    android:id="@+id/tv_state"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预订信息"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="12sp"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_start_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_start_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black_text"/>

                    <TextView
                        android:id="@+id/tv_start_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/black_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@mipmap/ic_to"
                    android:gravity="center"
                    android:textColor="@color/grey_text"
                    android:textSize="12sp" />
                <LinearLayout
                    android:id="@+id/ll_end_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_end_city"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--" />

                    <TextView
                        android:id="@+id/tv_end_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/black_text"
                        android:textSize="14sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01-01 周一 09:00出发 0天"
                    android:id="@+id/tv_start_time_and_duration"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_text"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="--"
                    android:layout_alignBottom="@id/tv_start_time_and_duration"
                    android:textSize="12sp"
                    android:id="@+id/tv_type"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆信息"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="12sp"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:id="@+id/iv_car"
                    fresco:placeholderImage="@color/bg_grey"
                    fresco:actualImageScaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_title"
                    tools:text="大众宝来"
                    android:textColor="@color/black_text"
                    android:layout_toEndOf="@id/iv_car"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_count"
                    tools:text="1辆"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/iv_car"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_person_count"
                    tools:text="可乘坐13人"
                    android:textSize="12sp"
                    android:layout_alignStart="@id/tv_title"
                    android:layout_alignBottom="@id/iv_car"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/ll_car_info">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/bg_grey"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包车牌信息"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="包车牌编号："
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/black_text"
                    android:gravity="center"
                    android:id="@+id/tv_car_num"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包车公司信息"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="12sp"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:id="@+id/rl_company"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="大众宝来"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:textStyle="bold"
                    android:id="@+id/tv_company"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_rent_point"
                    android:layout_below="@id/tv_company"
                    tools:text="公司地址：团结楼3楼1门102室长虹道"
                    android:textSize="12sp"
                    android:paddingBottom="5dp"
                    android:paddingTop="6dp"
                    android:layout_toStartOf="@id/iv_call"
                    android:layout_marginEnd="10dp"
                    android:paddingRight="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_open_time"
                    android:layout_below="@id/tv_rent_point"
                    tools:text="营业时间：09:00-21:00"
                    android:textSize="12sp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="8dp"/>
                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_call_phone_y"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/tv_rent_point"
                    android:padding="5dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单信息"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="12sp"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_title"
                    android:text="订单编号"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_num"
                    tools:text="1000000"
                    android:layout_toEndOf="@id/tv_order_title"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_below="@id/tv_order_num"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间"
                    android:layout_below="@id/tv_order_num"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_time"
                    tools:text="2018-06-08 08:23"
                    android:layout_alignStart="@id/tv_order_num"
                    android:layout_below="@id/tv_order_num"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_below="@id/tv_order_time"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人电话"
                    android:layout_below="@id/tv_order_time"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_phone"
                    tools:text="13987654321"
                    android:layout_alignStart="@id/tv_order_num"
                    android:layout_below="@id/tv_order_time"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_call_user"
                    android:layout_below="@id/tv_order_time"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"
                    android:drawableStart="@mipmap/phone_bule"
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_below="@id/tv_phone"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计金额"
                    android:layout_below="@id/tv_phone"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:id="@+id/tv_money_title"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_money"
                    tools:text="￥106"
                    android:visibility="gone"
                    android:layout_alignStart="@id/tv_order_num"
                    android:layout_below="@id/tv_phone"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/color_money_text"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单总额"
                    android:layout_below="@id/tv_phone"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:id="@+id/tv_all_money_title"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_all_money"
                    tools:text="￥106"
                    android:layout_alignStart="@id/tv_order_num"
                    android:layout_below="@id/tv_phone"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_below="@id/tv_all_money"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订金金额"
                    android:layout_below="@id/tv_all_money"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"
                    android:textSize="14sp"
                    android:id="@+id/tv_money_1_title"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_money_1"
                    tools:text="￥106"
                    android:visibility="gone"
                    android:layout_alignStart="@id/tv_order_num"
                    android:layout_below="@id/tv_all_money"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_below="@id/tv_money_1"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尾款金额"
                    android:layout_below="@id/tv_money_1"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"
                    android:textSize="14sp"
                    android:id="@+id/tv_money_2_title"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_money_2"
                    tools:text="￥106"
                    android:visibility="gone"
                    android:layout_alignStart="@id/tv_order_num"
                    android:layout_below="@id/tv_money_1"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_grey"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>