<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-06-08 08:23"
                android:id="@+id/tv_time"
                android:textColor="@color/black_text"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_status"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:text="服务中"/>
            <View style="@style/view_line_h"
                android:layout_below="@id/tv_status"
                android:layout_marginTop="9dp"/>
            <TextView
                android:layout_below="@id/tv_status"
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:drawableStart="@mipmap/ticket_time"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="6月8日 周五 11:10上车"
                android:textSize="14sp"
                android:textColor="@color/black_text" />
            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@drawable/ic_dot_start"
                android:drawablePadding="12dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:layout_below="@id/tv_start_time"
                android:layout_marginTop="8dp"
                android:text="唐山恒通快捷酒店"
                android:textColor="@color/black_text" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_dot_end"
                android:drawablePadding="12dp"
                android:layout_below="@id/tv_start"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="迁安市汽车客运站"
                android:textColor="@color/black_text" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_num"
                android:text="共2张票"
                android:textColor="@color/grey_text"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/tv_start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price"
                android:text="￥110"
                android:textColor="@color/black_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/tv_end"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_num"
                android:layout_marginStart="2dp"
                android:layout_above="@id/tv_price"
                android:background="@color/dividing_line_color"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dividing_line_color"
                android:layout_below="@id/tv_price"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_price"
                android:gravity="end"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消订单"
                    android:background="@drawable/bg_hollow"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/tv_cancel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即支付"
                    android:background="@drawable/bg_solid"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/tv_action"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>