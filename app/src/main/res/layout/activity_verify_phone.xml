<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_bg">
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_hint_tip"
        android:textSize="12sp"
        android:textColor="#FFA200"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="#FFF0D5"/>
    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_hint">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="14sp"
            android:textColor="@color/black_text"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="14sp"
            android:inputType="number"
            android:maxLength="6"
            android:id="@+id/et_code"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="10dp"
            android:hint="请输入验证码"/>
        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="获取验证码"
            android:textColor="@color/color_gray_orange_selector"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_hint">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码"
            android:textSize="14sp"
            android:textColor="@color/black_text"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <EditText
            android:id="@+id/et_pwd"
            android:inputType="textPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入6-18位密码"
            android:maxLength="18"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp"
            android:tag="1"
            android:textSize="@dimen/textSize"/>
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/ic_hide"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/btnTextStyle"
        android:text="下一步"
        app:layout_constraintTop_toBottomOf="@id/tv_hint"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="100dp"/>
</android.support.constraint.ConstraintLayout>