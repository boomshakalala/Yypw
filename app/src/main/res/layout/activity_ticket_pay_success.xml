<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@mipmap/bg_qrcode"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_qr_code"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="20dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="上车前，请将验票码出示给司机进行验票，\n 验票通过后即可乘车。"/>
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验票码："
                    android:layout_centerHorizontal="true"
                    android:layout_above="@id/tv_tip"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black_text"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电子票据"
                        android:textSize="12sp"
                        android:textColor="@color/black_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（进车站检票乘车时请使用该条形码）"
                        android:textSize="10sp"
                        android:textColor="@color/color_money_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:id="@+id/ll_passenger"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin">
                <TextView
                    android:id="@+id/tv_see_detail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="查看订单详情"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:gravity="center"/>
                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_go_home"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="返回票务首页"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:background="@drawable/bg_blue_hollow"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tip_1"
                android:textSize="10sp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textColor="@color/grey_text"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tip_2"
                android:textSize="10sp"
                android:textColor="@color/grey_text"
                android:layout_marginTop="5dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>