<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:text="2018-06-05 07:16"
                android:textColor="@color/black_text"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_state"
                android:textColor="@color/colorWaitePay"
                android:layout_alignParentEnd="true"
                android:text="待支付"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dividing_line_color"
                android:layout_below="@id/tv_state"
                android:layout_marginTop="10dp"/>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:text="大众宝来"
                android:layout_below="@id/tv_state"
                android:layout_marginTop="20dp"
                android:id="@+id/tv_brand"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_brand"
                android:text="自动档·5座·1.6L 经济型"
                android:textSize="12sp"
                android:layout_toEndOf="@id/tv_brand"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_car_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rent_time_range"
                android:textSize="14sp"
                android:text="06-05 10:30 至 06-07 10:30"
                android:layout_below="@id/tv_brand"
                android:textColor="@color/black_text"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rent_time"
                android:text="2天"
                android:layout_alignBottom="@id/tv_rent_time_range"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:textColor="@color/grey_text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥820.0"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:id="@+id/tv_price"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_rent_time_range"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:text="唐山泰赫汽车租赁公司"
                android:layout_alignTop="@id/tv_price"
                android:layout_toStartOf="@id/tv_price"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:id="@+id/tv_company"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dividing_line_color"
                android:layout_below="@id/tv_company"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_company"
                android:gravity="end"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消订单"
                    android:background="@drawable/bg_hollow"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/tv_cancel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即支付"
                    android:background="@drawable/bg_solid"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/tv_action"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>