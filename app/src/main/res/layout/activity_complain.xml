<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.trip.ComplainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|bottom"
                    android:text="您为什么投诉司机?"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSize" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="2dp"
                    android:text="请告诉我们，我们好立马处理"
                    android:textColor="#FFA200"
                    android:textSize="13sp" />

                <View
                    style="@style/view_line_h"
                    android:layout_marginTop="60dp" />

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/radio_selector"
                        android:paddingBottom="16dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:text="司机态度不好"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <View style="@style/view_line_h"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"/>

                    <RadioButton
                        android:id="@+id/rb_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/radio_selector"
                        android:paddingBottom="16dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:text="车主拒绝来接"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <View style="@style/view_line_h"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <RadioButton
                        android:id="@+id/rb_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/radio_selector"
                        android:paddingBottom="16dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:text="无故取消订单"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <View style="@style/view_line_h"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"/>

                    <RadioButton
                        android:id="@+id/rb_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/radio_selector"
                        android:paddingBottom="16dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:text="额外收取费用"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <View style="@style/view_line_h"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <RadioButton
                        android:id="@+id/rb_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/radio_selector"
                        android:paddingBottom="16dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:text="车主迟到"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <View style="@style/view_line_h"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <RadioButton
                        android:id="@+id/rb_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/radio_selector"
                        android:paddingBottom="16dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:text="未送达目的地"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <View style="@style/view_line_h"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <RadioButton
                        android:id="@+id/rb_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/radio_selector"
                        android:paddingBottom="16dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:text="车辆信息不符"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <View style="@style/view_line_h"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <RadioButton
                        android:id="@+id/rb_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/radio_selector"
                        android:paddingBottom="16dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:text="其他"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />
                </RadioGroup>
            </FrameLayout>


            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="120dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="在这儿输入详细描述"
                android:padding="12dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="提交投诉"
        android:textColor="@color/white"
        android:textSize="@dimen/buttonTextSize" />
</RelativeLayout>