<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="30dp"
                android:layout_height="30dp"
                fresco:roundAsCircle="true"
                fresco:placeholderImage="@color/bg_grey"
                android:id="@+id/iv_head"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_state"
                android:textColor="@color/colorWaitePay"
                android:layout_alignParentEnd="true"
                android:text="待支付"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/black_text"
                android:text="唐山泰赫汽车租赁公司"
                android:layout_toEndOf="@id/iv_head"
                android:layout_toStartOf="@id/tv_state"
                android:textSize="12sp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_company"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dividing_line_color"
                android:layout_below="@id/tv_state"
                android:layout_marginTop="10dp"/>
            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="万达广场（唐山路南店） 出发"
                android:layout_below="@id/iv_head"
                android:layout_marginTop="20dp"
                android:id="@+id/tv_start_point"
                android:textColor="@color/black_text"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:text="06-08 周五 09:00"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:layout_below="@id/tv_start_point"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rent_time"
                android:text="2天"
                android:layout_alignBottom="@id/tv_time"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:textColor="@color/black_text"
                />
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:text="丰田海狮"
                android:layout_below="@id/tv_time"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_brand"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1辆"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:layout_toEndOf="@id/tv_brand"
                android:layout_alignBottom="@id/tv_brand"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_count"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小型巴士"
                android:textColor="@color/black_text"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/tv_brand"
                android:id="@+id/tv_type"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_price"
                android:textSize="14sp"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                android:id="@+id/tv_money_title"
                android:text="预计金额"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥820.0"
                android:textColor="@color/color_money_text"
                android:textSize="14sp"
                android:id="@+id/tv_price"
                android:textStyle="bold"
                android:layout_toEndOf="@id/tv_money_title"
                android:layout_marginStart="10dp"
                android:gravity="end"
                android:layout_below="@id/tv_brand"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尾款金额 ￥820.0"
                android:textColor="@color/color_money_text"
                android:textSize="14sp"
                android:id="@+id/tv_balance_payment"
                android:textStyle="bold"
                android:layout_toEndOf="@id/tv_price"
                android:layout_below="@id/tv_brand"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dividing_line_color"
                android:layout_below="@id/tv_price"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_price"
                android:gravity="end"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消订单"
                    android:background="@drawable/bg_hollow"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/tv_cancel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付订金"
                    android:background="@drawable/bg_solid"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/tv_action"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>