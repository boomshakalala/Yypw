<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:id="@+id/ll_bottom"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_negative"
            android:text="取消订单"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_blue_hollow"
            android:textSize="14sp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_positive"
            android:text="联系商家"
            android:layout_marginEnd="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textSize="14sp"
            android:visibility="gone"/>
    </LinearLayout>
    <ScrollView
        android:layout_above="@id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单状态"
                    android:drawableStart="@mipmap/ic_state_black"
                    android:id="@+id/tv_state_title"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="--"
                    android:textColor="@color/color_money_text"
                    android:id="@+id/tv_state"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预订信息"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="12sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/ll_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_start_date"
                        style="@style/style_text_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="06-05" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="周二 10:30"
                        android:textColor="@color/grey_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_end_date"
                        style="@style/style_text_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="06-05" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="周二 10:30"
                        android:textColor="@color/grey_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_rent_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@id/ll_start_time"
                    android:layout_toStartOf="@id/ll_end_time"
                    android:drawableBottom="@mipmap/ic_goto"
                    android:gravity="center"
                    tools:text="2天"
                    android:textColor="@color/grey_text"
                    android:textSize="12sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆信息"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="12sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_title"
                    tools:text="大众宝来"
                    android:textColor="@color/black_text"
                    android:textStyle="bold"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_type"
                    tools:text="经济型"
                    android:textColor="@color/black_text"
                    android:textSize="12sp"
                    android:layout_below="@id/tv_title"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_parameter"
                    tools:text="自动档·5座·1.6L"
                    android:textColor="@color/black_text"
                    android:textSize="12sp"
                    android:layout_below="@id/tv_type"
                    android:layout_marginTop="4dp"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="96dp"
                    android:layout_height="62dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_car"
                    fresco:placeholderImage="@color/bg_grey"
                    fresco:actualImageScaleType="centerCrop"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="租车公司信息"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="12sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="大众宝来"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:textStyle="bold"
                    android:id="@+id/tv_company"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_rent_point"
                    android:layout_below="@id/tv_company"
                    tools:text="取车门店：距唐山汽车客运东站1.5km"
                    android:textSize="12sp"
                    android:paddingBottom="5dp"
                    android:paddingTop="6dp"
                    android:paddingRight="5dp"
                    android:drawableEnd="@mipmap/detail_bule"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_open_time"
                    android:layout_below="@id/tv_rent_point"
                    tools:text="营业时间：09:00-21:00"
                    android:textSize="12sp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="14dp"/>
                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/phone_bule"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/tv_open_time"
                    android:padding="5dp"/>
                <com.hbcx.user.views.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fl_container"
                    android:layout_below="@id/iv_call"
                    app:HorizontalSpacing="4dp"
                    app:VerticalSpacing="5dp"
                    android:layout_marginTop="21dp"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_more"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:layout_alignBottom="@id/fl_container"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单信息"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="12sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_title"
                    android:text="订单编号"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_num"
                    tools:text="1000000"
                    android:layout_toEndOf="@id/tv_order_title"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_below="@id/tv_order_num"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订购时间"
                    android:layout_below="@id/tv_order_num"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_time"
                    tools:text="2018-06-08 08:23"
                    android:layout_alignStart="@id/tv_order_num"
                    android:layout_below="@id/tv_order_num"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_below="@id/tv_order_time"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="驾驶员"
                    android:layout_below="@id/tv_order_time"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_driver"
                    tools:text="陆离"
                    android:layout_alignStart="@id/tv_order_num"
                    android:layout_below="@id/tv_order_time"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_id_card"
                    tools:text="511****7362"
                    android:visibility="gone"
                    android:layout_below="@id/tv_order_time"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_below="@id/tv_driver"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人电话"
                    android:layout_below="@id/tv_driver"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_phone"
                    tools:text="13987654321"
                    android:layout_alignStart="@id/tv_order_num"
                    android:layout_below="@id/tv_driver"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_call_user"
                    android:layout_below="@id/tv_driver"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"
                    android:drawableStart="@mipmap/phone_bule"
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_below="@id/tv_phone"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单金额"
                    android:layout_below="@id/tv_phone"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_money"
                    tools:text="￥106"
                    android:layout_alignStart="@id/tv_order_num"
                    android:layout_below="@id/tv_phone"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_detail"
                    android:layout_below="@id/tv_phone"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"
                    android:drawableStart="@mipmap/detail_bule"
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_grey"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>