<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空"
            android:gravity="center"
            android:id="@+id/tv_clear"
            android:textColor="@color/grey_text"
            android:textSize="14sp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="保存"
            android:gravity="center"
            android:id="@+id/tv_ok"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/top_shadow"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签"
                android:id="@+id/tv_label_title"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <com.hbcx.user.views.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:VerticalSpacing="10dp"
                app:HorizontalSpacing="20dp"
                android:id="@+id/fl_label"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥200/天以下"
                    android:id="@+id/rb_price_1"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/selector_blue_black"
                    android:background="@drawable/bg_selector_blue_black"/>
                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥200-￥500/天"
                    android:id="@+id/rb_price_2"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/selector_blue_black"
                    android:background="@drawable/bg_selector_blue_black"/>
                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥500/天以上"
                    android:id="@+id/rb_price_3"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/selector_blue_black"
                    android:background="@drawable/bg_selector_blue_black"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tv_distance_title"/>
            <LinearLayout
                android:id="@+id/ll_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">
                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1公里内"
                    android:id="@+id/rb_distance_1"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/selector_blue_black"
                    android:background="@drawable/bg_selector_blue_black"/>
                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3公里内"
                    android:id="@+id/rb_distance_2"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/selector_blue_black"
                    android:background="@drawable/bg_selector_blue_black"/>
                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5公里内"
                    android:id="@+id/rb_distance_3"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/selector_blue_black"
                    android:background="@drawable/bg_selector_blue_black"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <com.hbcx.user.views.NestedGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gv_brand"
                android:numColumns="4"
                android:horizontalSpacing="16dp"
                android:verticalSpacing="10dp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>