<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp">
        <RelativeLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-06-08 08:23"
                android:id="@+id/tv_time"
                android:textColor="@color/black_text"
                android:textSize="12sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_status"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:text="服务中"
                android:layout_marginTop="8dp"/>
            <View style="@style/view_line_h"
                android:layout_below="@id/tv_status"
                android:layout_marginTop="9dp"/>
            <TextView
                android:layout_below="@id/tv_status"
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@mipmap/ic_trip_time"
                android:drawablePadding="8dp"
                android:singleLine="true"
                android:text="--"
                android:textSize="14sp"
                android:textColor="@color/black_text" />
            <TextView
                android:id="@+id/tv_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@drawable/ic_dot_start"
                android:drawablePadding="12dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:layout_below="@id/tv_start_time"
                android:layout_marginTop="8dp"
                android:text="--"
                android:textColor="@color/black_text" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_dot_end"
                android:drawablePadding="12dp"
                android:layout_below="@id/tv_start"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/black_text" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>