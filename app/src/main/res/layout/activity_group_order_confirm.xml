<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计费用："
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_price"
            android:textColor="@color/color_money_text"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:text="￥0.0"
            android:textStyle="bold"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提交订单"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingStart="30dp"
            android:background="@color/colorPrimary"
            android:paddingEnd="30dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_above="@id/ll_bottom"
        android:background="@color/page_bg"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/view_pager"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_indicator"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="bottom|center_horizontal"/>
            </FrameLayout>
            <RelativeLayout
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="大众宝来"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:textStyle="bold"
                    android:id="@+id/tv_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_person_count"
                    android:layout_below="@id/tv_name"
                    tools:text="自动档·5座·1.6L"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_money"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/tv_person_count"
                    android:textColor="@color/color_money_text"
                    android:textSize="14sp"
                    tools:text="￥500/天"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:id="@+id/rl_company"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="大众宝来"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:textStyle="bold"
                    android:id="@+id/tv_company"/>
                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_call_phone_y"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/tv_rent_point"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_rent_point"
                    android:layout_toStartOf="@id/iv_call"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@id/tv_company"
                    tools:text="取车门店：距唐山汽车客运东站1.5km"
                    android:textSize="12sp"
                    android:paddingBottom="5dp"
                    android:paddingTop="6dp"
                    android:paddingRight="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_open_time"
                    android:layout_below="@id/tv_rent_point"
                    tools:text="营业时间：09:00-21:00"
                    android:textSize="12sp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_start_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_start_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06-05"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black_text"/>

                    <TextView
                        android:id="@+id/tv_start_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周二 10:30"
                        android:textColor="@color/black_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@mipmap/ic_to"
                    android:gravity="center"
                    android:textColor="@color/grey_text"
                    android:textSize="12sp" />
                <LinearLayout
                    android:id="@+id/ll_end_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_end_city"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06-05" />

                    <TextView
                        android:id="@+id/tv_end_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周二 10:30"
                        android:textColor="@color/black_text"
                        android:textSize="14sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06-08 周五 09:00出发 3天"
                    android:id="@+id/tv_start_time_and_duration"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_text"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="小巴"
                    android:layout_alignBottom="@id/tv_start_time_and_duration"
                    android:textSize="12sp"
                    android:id="@+id/tv_type"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包车数量"
                    style="@style/style_common_title"
                    android:id="@+id/tv_count_title"/>
                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:text="+"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bg_blue_hollow"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_count"
                    android:text="1辆"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:layout_toStartOf="@id/tv_add"
                    android:layout_alignTop="@id/tv_add"/>
                <TextView
                    android:id="@+id/tv_reduce"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:background="@drawable/bg_black_hollow"
                    android:layout_toStartOf="@id/tv_count"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line_color"
                    android:layout_below="@id/tv_count_title"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_count_title"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人电话"
                        style="@style/style_common_title"
                        android:id="@+id/tv_phone_title"/>
                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textColor="@color/black_text"
                        android:hint="用于接收预订信息"
                        android:textSize="14sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="right"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:digits="1234567890"
                        android:maxLines="1"
                        android:singleLine="true"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/address_book"
                        android:id="@+id/iv_add_phone"
                        android:layout_alignParentEnd="true"
                        android:padding="8dp"
                        android:layout_alignTop="@id/tv_phone_title"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="※"
                        android:textColor="@color/color_tv_orange"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#80E60000"
                        android:textSize="10sp"
                        android:layout_marginStart="10dp"
                        android:text="包车价格为商家的参考价格，实际价格会随着市场需求在参考价基础上左右浮动20%"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="※"
                        android:textColor="@color/color_tv_orange"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_text"
                        android:textSize="10sp"
                        android:layout_marginStart="10dp"
                        android:text="提交订单后商家会第一时间与您联系，了解你的详细包车需求以及交流实际包车费用"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="※"
                        android:textColor="@color/color_tv_orange"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_text"
                        android:textSize="10sp"
                        android:layout_marginStart="10dp"
                        android:text="与商家商议好价格后，您需支付一定的预订金，若您因其他原因需要取消包车，预订金不予退还"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <CheckedTextView
                    android:id="@+id/rb_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您已阅读并同意"
                    android:drawableStart="@drawable/radio_selector"
                    android:checked="true"
                    android:textSize="12sp"
                    android:drawablePadding="6dp"/>
                <TextView
                    android:id="@+id/tv_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《预订条款》"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@id/rb_rule"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/top_shadow"
        android:layout_above="@id/ll_bottom"/>
</RelativeLayout>